<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nativeAdViewContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?artListCardBackgroundColor"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/native_ads_scp_art" />

        <!--mopub native ads container-->
        <FrameLayout
            android:id="@+id/mopubNativeAdsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/native_ads_buttons" />

    </LinearLayout>
</android.support.v7.widget.CardView>