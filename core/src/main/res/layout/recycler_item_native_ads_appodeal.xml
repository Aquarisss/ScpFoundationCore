<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nativeAdViewContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/native_ads_admob_height"
    android:visibility="gone"
    app:cardBackgroundColor="?artListCardBackgroundColor"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/cardview_default_radius"
    tools:visibility="visible"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.appodeal.ads.native_ad.views.NativeAdViewAppWall
            android:id="@+id/appodealNativeAdViewAppWall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.appodeal.ads.NativeMediaView
            android:id="@+id/appodealNativeMediaView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            />

    </FrameLayout>
</android.support.v7.widget.CardView>